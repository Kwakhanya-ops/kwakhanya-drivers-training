# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/kwakhanya_drivers

# Email Service (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Session Security
SESSION_SECRET=your_random_session_secret_here

# Environment
NODE_ENV=development

# Optional: WhatsApp Business API (if using WhatsApp notifications)
WHATSAPP_API_TOKEN=your_whatsapp_token_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here

# PayFast Payment Gateway (for South African payments)
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_PASSPHRASE=your_payfast_passphrase
